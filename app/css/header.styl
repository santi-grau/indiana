#header
    position fixed
    z-index 100
    width 100%
    top 0px
    opacity 0
    transition opacity 0.4s
    &.active
        opacity 1
    .title
        position relative
        width 500px
        height 82px
        top 23px
        background url('../assets/logo.svg') 100% 100% no-repeat
        background-position center top
        background-size contain
        margin 0px auto
        transform-origin 50% 0
        &#titleWhite
            z-index 1000
            background url('../assets/logo_white.svg') 100% 100% no-repeat
            background-position center top
            background-size contain
            display none
        
    #share
        position absolute
        top 23px
        right 23px
        .sharebut
            width 23px
            height 23px
            margin-bottom 10px
            background-position center center
            background-size contain
            &.instagram
                background url('../assets/ig.svg') 100% 100% no-repeat
            &.facebook
                background url('../assets/fb.svg') 100% 100% no-repeat
    #menu
        width 100%
        height 100%
        pointer-events none
        position fixed
        top 0px
        left 0px
        z-index 1
        .hamburger
            pointer-events auto
            z-index 100
            display none
            position absolute
            top 23px
            left 23px
            width 20px
            height 20px
            background url('../assets/hamburger.svg') 100% 100% no-repeat
        &.modularsystems
            background blueColor
            color greenColor
        &.aboutus
            background blueColor
            color yellowColor
        .pattern
            width 100%
            height 100%
            font-family indiana
            font-size 90px
            line-height 76px
            position fixed
            z-index 0
            transform rotate(-8deg)
            .inner
                .line
                    position relative
                    width 20000px
        #buts
            position relative
            z-index 1
            list-style-type none
            margin 0
            padding 0
            margin-top 23px
            margin-left 23px
            li
                a
                    color #000000
                    font-size 20px
                    line-height 22px
                    text-decoration none
                    pointer-events auto

@media only screen and (max-width: 768px)
    #header
        .title
            height 42px
            width 200px
        #menu
            #buts
                display none
                margin-top 100px
                li
                    a
                        color #ffffff
            .hamburger
                display block
    body.menuMobile
        #header
            .title
                display none
                &#titleWhite
                    display block
            #share
                z-index 1000
                .sharebut
                    &.instagram
                        background url('../assets/ig_w.svg') 100% 100% no-repeat
                    &.facebook
                        background url('../assets/fb_w.svg') 100% 100% no-repeat
            #menu
                background #000000
                #buts
                    display block
                .hamburger
                    background url('../assets/close.svg') 100% 100% no-repeat