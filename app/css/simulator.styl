.simulator
    .rounded
        font-size 12px
        padding 13px 0px
        border-radius 40px
        text-align center
        width 40px
        cursor pointer
    #colorSwap
        z-index 200
        position fixed
        color #000000
        background #ffffff
        top 23px
        right 60px
        border-radius 40px
        cursor pointer
        &:hover
            background #000000
            color #ffffff
    #zoom
        position fixed
        bottom 23px
        left 50%
        transform translateX(-50%)
        .rounded
            margin 0px 5px
            font-size 18px
            padding 9px 0px
            float left
            background #ffffff
            &:hover
                background #000000
                color #ffffff
    #items
        position absolute
        opacity 0
        left 23px
        top 50%
        transform translateY(-50%)
        width 300px
        transition opacity 0.2s
        &.active
            opacity 1
        div
            border-top solid 1px #111111
            .deleteItem
                float right
                text-decoration none
                color #111111
            
    #menu
        position absolute
        right 23px
        top 50%
        transform translateY(-50%)
        width 300px
        .block
            border-top solid 1px #111111
            .title
                font-size 20px
                text-decoration none
                color #000000
            &.active
                .collapsible
                    .inner
                        height 100%
            .collapsible
                .inner
                    height 0
                    overflow hidden
                    .info
                        font-size 14px
                    .options
                        width 100%
                        &.modOptions
                            display none
                            &.active
                                display block
                        a
                            float left
                            border solid 1px #111111
                            text-decoration none
                            color #111111
                            font-size 10px
                            min-width 30px
                            text-align center
                            padding 5px 10px
                            margin 0px 5px 5px 0px
                            &:hover
                                background #000000
                                color #ffffff
    #threeLayer
        width 100%
        height 100vh
        transition background 0.3s
        &.color0
            background blueColor
        &.color1
            background greenColor
        &.color2
            background redColor
        &.color3
            background yellowColor
        &.color4
            background burntColor