.modular-system
    #modular-intro
        background white
        .body
            font-size 18px
            line-height 22px
            p
                margin-top 0
        .image
            height 450px
            background url('../assets/modularSystems.jpg') center center
            background-size cover
            margin-bottom 60px
    #modular-transform
        background white
        .inner
            width 100%
            .grid
                .block:nth-child(odd)
                    .imgContainer
                        background-color blueColor
                .block:nth-child(even)
                    .imgContainer
                        background-color greenColor
                .block:nth-child(3n)
                    .imgContainer
                        background-color redColor
                .block:nth-child(4n)
                    .imgContainer
                        background-color yellowColor
                .block:nth-child(5n)
                    .imgContainer
                        background-color burntColor
                .block:nth-child(6n)
                    .imgContainer
                        background-color greenColor
                .block:nth-child(7n)
                    .imgContainer
                        background-color greenColor
                .block:nth-child(8n)
                    .imgContainer
                        background-color redColor
                .block
                    position relative
                    width calc(25% - 20px)
                    margin 10px
                    float left
                    .imgContainer
                        font-size 20px
                        position relative
                        width 100%
                        height 15vw
                        background-repeat no-repeat
                        background-size cover
                        background-position center center
                        &:hover
                            background-image none !important
                            .count
                                display block
                    .count
                        position relative
                        top 50%
                        transform translateY(-50%)
                        text-align center
                        display none
                    .legend
                        margin-top 10px
                        text-align center
    #modular-simulator
        background greenColor
        .inner
            padding 0
            height 100vh
        .body
            position absolute
            width 100%
            top 50%
            transform translateY(-50%)
            color yellowColor
            text-align center
            font-family indiana
            font-size 127px
            letter-spacing -5px
        