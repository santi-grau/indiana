.collection
    .inner
        &>.nav
            text-align center
            width 100%
            .menu
                list-style none
                display inline-block
                padding 0
                margin 0
                li
                    float left
                    margin 0px 18px
                    a
                        text-decoration none
                        color #000000
                        font-size 28px
                        &:hover
                            text-decoration underline
            
    .collection
        padding-top 130px
        width 860px
        margin 0 auto
        .title
            font-family indiana
            text-align center
            font-size 70px

@media only screen and (min-width: 768px) and (max-width: 1280px)
    .collection
        .collection
            width 708px

@media only screen and (max-width: 768px)
    .collection
        .carousel
            width 90vw
            height 60vw
            .outer
                .slider
                    .img
                        width 90vw
                        height 60vw
                
        .inner
            &>.nav
                display none
        .collection
            width 90%
            .title
                font-size 40px