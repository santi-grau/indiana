@font-face
    font-family dia
    src url('../assets/dia-regular.ttf')

@font-face
    font-family indiana
    src url('../assets/indiana.otf')

blueColor = #6cc1d7
greenColor = #088f51
redColor = #e44129
yellowColor = #ffef00
burntColor = #eea904

html
    width 100%
    height 100%
    padding 0
    margin 0
body
    width 100%
    min-height 100%
    height 100%
    padding 0
    margin 0
    font-family dia

#wraper
    min-height 100vh
    .section
        min-height 100vh
        .inner
            width 70%
            margin 0px auto

.clearfix
    overflow auto

.clearfix::after
    content ""
    clear both
    display table

@import "header"
@import "home"
@import "modular-system"
@import "simulator"
@import "collection"
@import "footer"

