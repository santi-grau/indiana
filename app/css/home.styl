.home
    #home-home
        background blueColor
    #home-evolving
        background white
        text-align center
        font-family indiana
        font-size 107px
        line-height 90px
        letter-spacing -4px
        .inner
            width 1010px
        .greenColor
            color greenColor
        .blueColor
            color blueColor
        .redColor
            color redColor
    #home-modular
        background yellowColor
        .inner
            width 1160px
            .body
                float left
                width 560px
                p
                    margin-top 0
            .image
                float right
                height 388px
                background url('../assets/new/Sideboard-B-4.2-P--FB.jpg') center center
                background-size cover
                margin-bottom 60px
                width 560px
    #home-collections
        background white
    #home-simulator
        background greenColor
        cursor pointer
        &:hover
            background yellowColor
            .body
                color greenColor
        .inner
            padding 0
            height 100vh
        .body
            position absolute
            width 100%
            top 50%
            transform translateY(-50%)
            color yellowColor
            text-align center
            font-family indiana
            font-size 107px
            letter-spacing -5px

@media only screen and (min-width: 768px) and (max-width: 1280px)
    .home
        #home-home
            background yellowColor
        #home-evolving
            font-size 90px
            line-height 70px
            letter-spacing -2px
            .inner
                width 768px
        #home-modular
            .inner
                width 708px
                .body
                    float none
                    width 100%
                .image
                    float none
                    height auto
                    margin-bottom 50px
                    width 100%
                    height 490px

@media only screen and (max-width: 768px)
    .home
        #home-home
            background url('../assets/new/82A0947.jpg') center center
            background-size cover
            height 100vh
            #homeSlideShow
                opacity 0
        #home-evolving
            font-size 40px
            line-height 33px
            letter-spacing -1px
            .inner
                width 90%
        #home-modular
            .inner
                width 90%
                .body
                    float none
                    width 100%
                .image
                    float none
                    height auto
                    margin-bottom 50px
                    width 100%
                    height 60vw
        #home-simulator
            .body
                font-size 70px
                letter-spacing -1px