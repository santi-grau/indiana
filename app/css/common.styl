html
    width 100%
    height 100%
    padding 0
    margin 0
body
    width 100%
    min-height 100%
    height 100%
    padding 0
    margin 0
    font-family dia

p
    font-size 35px
    line-height 37px
#wraper
    position relative
    &.withTitle
        padding-top 140px
    .section
        position relative
        .inner
            position relative
            width 725px
            padding 120px 0 110px
            margin 0px auto
        &> .title
            text-align center
            font-size 38px
            position relative
            top 60px

img.leftCol
    width calc( 50% - 10px )
    margin-right 20px

img.rightCol
    width calc( 50% - 10px )

.imgContainer
    margin-bottom 20px

.imgContainer.center
    text-align center

.imgContainer.right
    text-align right


.clearfix
    overflow auto

.clearfix::after
    content ""
    clear both
    display table

.carousel
    position relative
    margin 20px auto
    width 100%
    height 450px
    &> img
        display none
    &> .nav
        position absolute
        top 50%
        transform translateY(-50%)
        width 60px
        height 60px
        z-index 10
        &.left 
            left -80px
            background url('../assets/leftArrow.svg') no-repeat center center
        &.right 
            right -80px
            background url('../assets/rightArrow.svg') no-repeat center center
    .outer
        width 100%
        height calc( 100% - 40px )
        position relative
        overflow hidden
        .slider
            width 1000vw
            height 100%
            transition transform 0.5s
            transition-timing-function cubic-bezier(0.165, 0.840, 0.440, 1.000)
            .img
                width 100vw
                height 100%
                float left
                height 100%
                width 725px
                background-repeat no-repeat
                background-size cover
                    
    .markers
        width 100%
        height 20px
        position absolute
        bottom 0
        text-align center
        .marker
            width 15px
            height 15px
            background #333333
            display inline-block
            margin 0px 10px
            border-radius 10px
            transition background 0.2s
            &.active
                background blueColor
